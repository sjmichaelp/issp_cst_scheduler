<!DOCTYPE html>
<header>
    <title> Insert Instructor</title>
    <link href="/css/home.css" rel="stylesheet" type="text/css" />
</header>

<body>
  <div id='addDataBox'>
    <div id='loginFormDiv'>
      <form action="/insertInstructor" method="post">

        <div id="login__wrapper">
            <h2>Add or Edit Instructor</h2>

          <div id="editInstructor">
        <div class="form__group">
        <select style="width:100%; height:34px" name="Instructors">
            {{#each instructor_list}}
                <option value={{this.instructorID}}>{{this.instructorLastName}}, {{this.instructorFirstName}}</option>
            {{/each}}

        </select>   
        <div><br/></div>
         <input id="edit-instructor-submit" name= "edit-nstructor-submit" formaction="/editInstructor" class="submit_button shadow" type="submit" value="Edit Instructor">

          <label for="instructorSession" class="form__label">Select Instructor</label>
        </div>
        </div>

         
          <div class="form__group">
            <input id="instructorLastName" class="form__field" type="text" name="instructorLastName" placeholder="instructorLastName" value="{{instructor_last_name }}">
            <label for="instructorLastName" class="form__label">Last Name</label>
          </div>

          <div class="form__group">
            <input id="instructorFirstName" class="form__field" type="text" name="instructorFirstName" placeholder="instructorFirstName" value="{{instructor_first_name }}">
            <label for="instructorFirstName" class="form__label">First Name</label>
          </div>

           <div class="form__group">
            <input id="instructorEmail" class="form__field" type="text" name="instructorEmail" placeholder="instructorEmail" value="{{instructor_email }}">
            <label for="instructorEmail" class="form__label">Email</label>
          </div> 

        <div class="form__group" > 
            <label for="AvailableDays" class="form__label">Available Days: </label>
        </div> 
        <div >
        <div class="form__group" style="display:inline-block; position:relative">
          <label for="Monday" class="form__label" style="position:relative;">Monday 
              <input id="Monday" name="Monday" type="checkbox" {{#if Monday}}checked {{/if}}>
              <span ></span>
            </label>
        </div>

        <div class="form__group"  style="display:inline-block; position:relative">
          <label for="Tuesday" class="form__label" style="position:relative;" >Tuesday 
              <input id="Tuesday" name="Tuesday" type="checkbox" {{#if Tuesday}}checked {{/if}}>
              <span ></span>
            </label>
        </div>
        

        <div class="form__group" style="display:inline-block; position:relative" >
          <label for="Wednesday" class="form__label" style="position:relative;">Wednesday 
              <input id="Wednesday" name="Wednesday" type="checkbox" {{#if Wednesday}}checked {{/if}}>
              <span ></span>
            </label>
        </div>
        
        <div class="form__group" style="display:inline-block; position:relative">
          <label for="Thursday" class="form__label" style="position:relative;" >Thursday 
              <input id="Thursday" name="Thursday" type="checkbox" {{#if Thursday}}checked {{/if}}>
              <span ></span>
            </label>
        </div>

        <div class="form__group" style="display:inline-block; position:relative">
          <label for="Friday" class="form__label" style="position:relative;">Friday 
              <input id="Friday" name="Friday" type="checkbox" {{#if Friday}}checked {{/if}} >
              <span ></span>
            </label>
        </div>
        </div>

        <div>
        <div class="form__group"  style="display:inline-block; position:relative">
          <label for="Saturday" class="form__label" style="position:relative;">Saturday 
              <input id="Saturday" name="Saturday" type="checkbox" {{#if Saturday}}checked {{/if}}>
              <span ></span>
            </label>
        </div>
        
        <div class="form__group"  style="display:inline-block; position:relative">
          <label for="Sunday" class="form__label" style="position:relative;">Sunday 
              <input id="Sunday" name="Sunday" type="checkbox" {{#if Sunday}}checked {{/if}}> 
              <span ></span>
            </label>
        </div>
        </div>
        
        <div><br style = "line-height:2;"></div>

        <div class="form__group">
            <textarea id="comments" class="form__field" rows="5" name="comments" placeholder="Additional Comments">{{comment }}</textarea>
            <label for="comments" class="form__label">Additional Comments </label>
        </div>
        <br>

         {{#if instructorID}}
          <div class="form__group">
            <input style="opacity:0" id="instructorID" class="form__field" type="text" name="instructorID" placeholder="instructorID" value="{{instructorID}}">
            <label style="opacity:0" for="instructorID" class="form__label">Instructor ID</label>
          </div>
          {{/if}}

        
        <input id="login-submit" class="submit_button shadow" name= "add-instructor-submit" {{#if update_instructor}}formaction="/updateInstructor" {{/if}}type="submit" value="Submit">
      </form>
    <a href="/registrationForm"> 
      <button class='submit_button shadow'>Cancel</button>
    </a>
    </div>
  </div>

  <script src="/javascript/input_forms.js"></script>
</body>

